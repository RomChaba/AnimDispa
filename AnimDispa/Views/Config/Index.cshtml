@model IEnumerable<AnimDispa.Models.Config>

@{
    ViewBag.Title = "Index";
}

<h1>Gestion des configurations</h1>

<style>
    .btn-config {
        width: 100px;
    }
</style>

<div>
    <table class="table table-hover">
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Libelle)
                </td>
                <td>
                    @if (item.Value == true) {

                        @Html.ActionLink("Activé", "Edit", new { id = item.Id, }, htmlAttributes: new { @class = "btn btn-success btn-config", @title = "Cette configuration est activée" })

                    }
                    else {
                        @Html.ActionLink("Désactivé", "Edit", new { id = item.Id, }, htmlAttributes: new { @class = "btn btn-danger btn-config", @title = "Cette configuration est désactivée" })
                    }
                </td>
            </tr>
        }
    </table>
</div>
