@model IEnumerable<AnimDispa.Models.Types>

@{
    ViewBag.Title = "Index";
}

<h2>Gestion des animaux</h2>
@Html.ActionLink(" Ajouter un animal", "Add", null, htmlAttributes: new { @class = "glyphicon-plus btn btn-primary" })
<br /><br />

<div>
    <table class="table table-hover">
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Libelle)
                </td>
                <td style="text-align: right;">
                    @Html.ActionLink(" ", "Edit", new { id = item.Id, }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-warning" })
                    @Html.ActionLink(" ", "Index", "Races", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-eye-open btn btn-success" })
                    <!--@Html.ActionLink(" ", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger" })-->
                </td>
            </tr>
        }
    </table>
</div>
